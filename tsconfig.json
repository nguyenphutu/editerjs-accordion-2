{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./lib",
    "skipLibCheck": true,
    "allowJs": true,
    "incremental": true,
    "target": "ES2022",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": false,
    "experimentalDecorators": true,
    "noUnusedLocals": false,
    "forceConsistentCasingInFileNames": false,
    "declaration": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src", "**/*.ts"],
  "exclude": ["node_modules", "lib"],
}